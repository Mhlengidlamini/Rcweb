<!-- Views/Your/Index.cshtml -->
@model List<rc_tutors.Models.ViewModel.TutorModuleViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Tutor Modules</title>
    <style>
        .card {
            background-color: #f8f9fa; /* Grey background color */
            max-width: 300px; /* Set a smaller maximum width for the card */
            margin: 0; /* Remove default margin to start from the left side */
        }

        .divider {
            border-top: 1px solid #d8d8d8; /* Divider line color */
        }

        .tutor-img {
            max-width: 50px; /* Adjust the maximum width of the tutor image */
            margin-right: 10px; /* Add margin to create space between image and name */
        }

        .tutor-name {
            font-weight: bold; /* Make the tutor name bold */
            cursor: pointer; /* Show pointer cursor on hover */
            color: firebrick; /* Set the color of the tutor name (you can adjust this) */
            text-decoration: none;
        }
    </style>
</head>
<body>

    <div class="container">
       

        @foreach (var group in Model)
        {
            <hr />
            <div class="mt-4">
                <h3>@group.Faculty</h3>
                <div class="row">

                    @foreach (var module in group.Modules)
                    {
                        <div class="col-4">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">@module.ModuleName</h5>
                                    <hr />

                                    <div class="row">
                                        @foreach (var tutor in module.Tutors)
                                        {
                                            <div class="col-12">
                                                <div class="d-flex align-items-center">
                                                    <img src="@tutor.TutorImage" class="img-fluid rounded-circle tutor-img" alt="@tutor.TutorName">
                                                    <a href="#" class="mt-2 tutor-name">@tutor.TutorName</a>
                                                </div>
                                                <hr />
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
          
        }
    </div>


</body>
</html>

